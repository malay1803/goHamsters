<%- include('partials/head') %>
<%- include('partials/nav') %>
<%- include('partials/welcome') %>

<link rel="stylesheet" href="css/login.css" />

<div class="loginContainer">
  <div class="forms-container">
    <div class="signin-signup" >
        <form action="/loginUser" method="POST" onsubmit="return signinCheck()" class="sign-in-form" id="hideDiv" >
          <h2 class="title">Sign in</h2>
          <div class="input-field" id="inEmailDiv">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Email" id="inEmail" name="loginUserName" />
          </div>
          <div class="input-field" id="inPassword">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" id="inPass" name="loginPassword" />
          </div>
          
          <input type="submit" class="btn solid" value="Login" />
          <input style="font-size: .8em;" type="button" class="btn forget" value="Forget Password" onclick="forgetPassword();"/>
        </form>
        <!-- forget -->
        <form action="/forgotPassword" method="POST" class="sign-in-form" id="forget" >
          <h2 class="title">Enter your email</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="email" placeholder="Email" id="email"  name="loginUserName" />
          </div>
          
          <input style="font-size: .8em;" type="submit" class="btn forget" value="Forget Password" />
          <input type="button" class="btn solid" value="Login" onclick="forgetPasswordr();"/>
        </form>
        <!-- signup -->
      <form action="/addUser" method="POST" onsubmit="return signupCheck()" class="sign-up-form">
        <h2 class="title">Sign up</h2>
        <div class="input-field" id="upFirstName">
          <i class="fas fa-user"></i>
          <input type="text" name="firstName" id="firstName" class="form-control" placeholder="First Name" />
        </div>
        <div class="input-field" id="upLastName">
          <i class="fas fa-user"></i>
          <input type="text" name="lastName" id="lastName" class="form-control" placeholder="Last Name" />
        </div>
        <div class="input-field" id="upEmail">
          <i class="fas fa-envelope"></i>
          <input type="text" name="email" id="signUpEmail" class="form-control" placeholder="Email" />
        </div>
        <div class="input-field" id="upPassword">
          <i class="fas fa-lock"></i>
          <input type="password" name="password" id="password" class="form-control" placeholder="Password" />
        </div>
        <div class="input-field" id="upConfirmPassword">
          <i class="fas fa-lock"></i>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder=" Confirm Password" />
        </div>

        <input type="submit" class="btn" value="Sign up" />
        <!--<p class="social-text">Or Sign up with social platforms</p>
        <div class="social-media">
          <a href="#" class="social-icon">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-google"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>-->
      </form>
    </div>
  </div>

  <div class="panels-container">
    <div class="panel left-panel">
      <div class="content">
        <h3>New here?</h3>
        <p style="font-size: 1.2em;">
          Signup to be a part of the Hamsters family
        </p>
        <button class="btn transparent" id="sign-up-btn">
          Sign up
        </button>
      </div>
      <img src="images/bike.svg" class="image" alt="" />
    </div>
    <div class="panel right-panel">
      <div class="content">
        <h3>One of us?</h3>
        <p style="font-size: 1.2em;">
          Already a part of our family, click here to login
        </p>
        <button class="btn transparent" id="sign-in-btn">
          Sign in
        </button>
      </div>
      <img src="images/training.svg" class="image" alt="" />
    </div>
  </div>
</div>

<!-- Button trigger modal -->
<button type="" class="d-none btn btn-primary existEmail" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Error</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        A user with this email already exists!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="js/validations.js"></script>
<script src="js/login.js"></script>